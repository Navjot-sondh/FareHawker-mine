<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/travellersDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView

    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Travellers"
    android:textSize="17sp"
    android:textColor="#000000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:onClick="changePassengers"
            android:id="@+id/minusAdultsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            android:tag="1"/>

        <TextView
            android:id="@+id/adultTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:layout_marginRight="20dp"
            android:textColor="#0055FF"
            />

        <TextView
            android:tag="2"
            android:onClick="changePassengers"
            android:id="@+id/plusAdultsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:textSize="25sp"
            />
    </LinearLayout>
    <TextView

        android:layout_marginTop="20dp"
        android:text="ADULTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <TextView
        android:layout_marginTop="9dp"
        android:text="12 years and Above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:tag="3"
            android:onClick="changePassengers"
            android:id="@+id/minusChildrenTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/childrenTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:layout_marginRight="20dp"
            android:textColor="#0055FF"
            />

        <TextView
            android:tag="4"
            android:onClick="changePassengers"
            android:id="@+id/plusChildrenTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:textSize="25sp"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:text="CHILDREN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <TextView
        android:layout_marginTop="8dp"
        android:text="2 to 12 years old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:tag="5"
            android:onClick="changePassengers"
            android:id="@+id/minusInfantsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/infantsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:layout_marginRight="20dp"
            android:textColor="#0055FF"
            />

        <TextView
            android:tag="6"
            android:onClick="changePassengers"
            android:id="@+id/plusInfantsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:textSize="25sp"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:text="INFANTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <TextView
        android:layout_marginTop="8dp"
        android:text="Less than 2 years"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>
    <Button
        android:onClick="dismiss"
        android:id="@+id/okButton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#D70C0C"/>


</LinearLayout>
